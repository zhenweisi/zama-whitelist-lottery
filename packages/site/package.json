    "clsx": "^2.1.1",
    "ethers": "^6.15.0",
    "fhevmjs": "^0.6.2",
    "global": "^4.4.0",
    "idb": "^8.0.3",
    "next": "^15.4.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@fhevm/mock-utils": "0.1.0",
