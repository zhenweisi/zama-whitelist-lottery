  "private": true,
  "license": "BSD-3-Clause-Clear",
  "homepage": "https://github.com/zama-ai/fhevm-react-template/blob/main/packages/site/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zama-ai/fhevm-react-template.git"
  },
  "scripts": {
    "dev": "next dev",
    "clean": "rimraf .next && npm run generate-abi",
    "dev:mock": "npm run is-hardhat-node-running && next dev --turbopack",
    "dev:mock:rebuild": "npm run is-hardhat-node-running && npm run clean && next dev --turbopack",
    "dev-webpack:mock": "npm run is-hardhat-node-running && next dev",
    "dev-webpack:mock:rebuild": "npm run is-hardhat-node-running && npm run clean && next dev",
    "is-hardhat-node-running": "npm --prefix ../.. run is-hardhat-node-running",
    "generate-abi": "npm --prefix ../.. run generate-abi",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@fhevm/react": "0.3.0",
    "@fhevm/sdk": "^0.7.0-20",
    "@zama-fhe/relayer-sdk": "0.2.0",
